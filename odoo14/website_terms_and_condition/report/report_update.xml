	<template id="invoice_address" inherit_id="web.address_layout">

		<xpath expr="//t/div[@class='address row']" position="replace">

			<div class="address row">
                
                <div name="address" t-att-class="colclass" style="float:left; display: flex; min-width:100%;">

                	<div style="float:left;">
                		<!-- <p class="m-0" t-field="o.title"/> -->
                    	<t t-esc="address"/>
                	</div>
               

                	<div style="float:right; height:140px; width:300px;">
                		<div style="height:110px; width:100; float:left;" >
                			<span style="font-size:20px;">Rechnungs-Nr.</span><br></br>
                			<span>Rechnungsdatum</span>
                		</div>
                		<div style="height:110px; width:100; float:right; text-align:right; ">
                			<span style="font-size:20px;" t-if="o.name != '/'" t-field="o.name"/><br></br>
                   			<!-- <span class="m-0" t-if="o.invoice_date" t-field="o.invoice_date"/> -->
                   		</div>
                   	</div>
                
                </div>

                
                
            </div>
           
            
		

		</xpath>
	</template>

	<template id="invoice_header" inherit_id="web.external_layout_standard">
		<xpath expr="//div[1]/div[1]" position="replace">
			
		</xpath>
		<xpath expr="//div[@t-if='company.logo or company.report_header']"
			position="replace">
		
			<div class="row" style=" height:150px; min-width:100%;float:left;">
                <div class="col-12 mb4" style="float:right;">
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="height: 300px; float:right;" alt="Logo"/>
                </div>
                <div class="col-9 text-right" style="margin-top:22px;" t-field="company.report_header" name="moto"/>
            </div>


		</xpath>
	</template>


</odoo>