<?xml version="1.0" encoding="utf-8"?>
<odoo>
	

	<template id="inherit_invoice_report" inherit_id="account.report_invoice_document">

		<xpath expr="//t[@t-set='address']" position="before">
			<t t-set="title" t-value="o.partner_id.title.name"/>
		</xpath>
		<xpath expr="//t[@t-set='address']/address" position="before">
			<span t-esc="title"/>
		</xpath>


		<xpath expr="//t/div/h2/span[1]" position="replace">
			<span t-if="o.move_type == 'out_invoice' and o.state == 'posted' " style="color:#1e90ff; font-size:24px;">Rechnung Nr.</span>
		</xpath>
		<xpath expr="//t/div/h2/span[7]" position="replace">
			<span style="color:#1e90ff; font-size:24px;" t-if="o.name != '/'" t-field="o.name"/>
		</xpath>
		
		<xpath expr="//t/div/div//div[@name='invoice_date']" position="replace">
			<div style="margin-left:15px;">
			<p>Liebe <span t-esc="title"/><span class="m-0" t-field="o.partner_id"/> </p>
			<p>vielen Dank für Ihren Auftrag und das damit verbundene Vertrauen!
			 <br></br>
				Hiermit stelle ich Ihnen die folgende Leistung in Rechnung:</p><br></br>
			</div>
		</xpath>
		<xpath expr="//div[@name='due_date']" position="replace">
		</xpath>

		<xpath expr="//table[@name='invoice_line_table']/thead" position="replace">
			<thead>
				<tr style="background-color:#3090C7;">
								<th name="th_description" class="text-left"><span>Beschreibung</span></th>
								<th name="th_quantity" class="text-right"><span>Menge</span></th>
								<th name="th_priceunit" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Einzelpreis</span></th>
								<th name="th_price_unit" t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
									<span>Disc.%</span>
								</th>
								
								<th name="th_subtotal" class="text-right">
									<span groups="account.group_show_line_subtotals_tax_excluded">Gesamtpreis</span>
									<span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
								</th>
				</tr>
			</thead>
		</xpath>

		<xpath expr="//table[@name='invoice_line_table']/tbody/t/tr/t/td[5]" position="replace">
			
		</xpath>

	</template>	
