<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="website_form_view_inherit" model="ir.ui.view">
            <field name="name">website.form.view.inherit</field>
            <field name="model">website</field>
            <field name="inherit_id" ref="website.view_website_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@groups='base.group_no_one']" position="after">
                    <page string="Terms &amp; Conditions">
                        <group>
                            <group colspan="4">
                                <field name="terms_and_conditions"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>