<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="auth_signup.fields" name="Auth Signup/ResetPassword form fields">

            <div class="form-group field-login">
                <label for="login">Your Email</label>
                <input type="email" name="login" t-att-value="login" id="login" class="form-control form-control-sm" autofocus="autofocus"
                    autocapitalize="off" required="required" t-att-readonly="'readonly' if only_passwords else None"/>
            </div>

            <div class="form-group field-x_studio_owner_name">
                <label for="name">Your Name</label>
                <input type="text" name="x_studio_owner_name" t-att-value="x_studio_owner_name" id="x_studio_owner_name" class="form-control form-control-sm" placeholder="e.g. John Doe"
                    required="required" t-att-readonly="'readonly' if only_passwords else None"
                    t-att-autofocus="'autofocus' if login and not only_passwords else None" />
            </div>

            <div class="form-group field-name">
                <label for="name">DBA (Doing Business As)</label>
                <input type="text" name="name" t-att-value="name" id="name" class="form-control form-control-sm" placeholder="e.g. John Doe"
                    required="required" t-att-readonly="'readonly' if only_passwords else None"
                    t-att-autofocus="'autofocus' if login and not only_passwords else None" />
            </div>

            <div class="form-group field-phone">
                <label for="name">Business Phone</label>
                <input type="text" placeholder="Format :4704566785" pattern="[1-9]{1}[0-9]{9}" maxlength="10" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');" name="phone" t-att-value="phone" id="phone" class="form-control form-control-sm"
                    t-att-readonly="'readonly' if only_passwords else None"
                    t-att-autofocus="'autofocus' if login and not only_passwords else None" />
            </div>

            <div class="form-group field-mobile">
                <label for="name">Cell Phone</label>
                <input type="text" pattern="[1-9]{1}[0-9]{9}" maxlength="10" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');" name="mobile" t-att-value="mobile" id="mobile" class="form-control form-control-sm"
                    required="required" placeholder="Format :4704566785" t-att-readonly="'readonly' if only_passwords else None"
                    t-att-autofocus="'autofocus' if login and not only_passwords else None" />
            </div>

            <div class="form-group field-street">
                <label for="name">Street / Number</label>
                <input type="text" name="street" t-att-value="street" id="street" class="form-control form-control-sm"
                    required="required" t-att-readonly="'readonly' if only_passwords else None"
                    t-att-autofocus="'autofocus' if login and not only_passwords else None" />
            </div>

            <div class="form-group field-street2">
                <label for="name">Street2</label>
                <input type="text" name="street2" t-att-value="street2" id="street2" class="form-control form-control-sm"
                   t-att-readonly="'readonly' if only_passwords else None"
                    t-att-autofocus="'autofocus' if login and not only_passwords else None" />
            </div>

            <div class="form-group field-city">
                <label for="name">City</label>
                <input type="text" name="city" t-att-value="city" id="city" class="form-control form-control-sm"
                    required="required" t-att-readonly="'readonly' if only_passwords else None"
                    t-att-autofocus="'autofocus' if login and not only_passwords else None" />
            </div>

            <div class="form-group field-state_id">
                <label for="name">State</label>
                <select name="state_id" id="state_id" class="form-control form-control-sm signup_state" t-att-readonly="'readonly' if only_passwords else None"
                    t-att-autofocus="'autofocus' if login and not only_passwords else None" >
                         <option value="">Select State</option>
                        <t t-foreach="states or []" t-as="state">
                            <option t-att-value="state.id" t-att-selected="state.id == state_id">
                                <t t-esc="state.name"/>
                            </option>
                        </t>
                </select>
            </div>

            <div class="form-group">
                <label for="name">Zip</label>
                <input type="text" pattern="[0-9]{1}[0-9]{4}" name="zip1" t-att-value="zip1" id="zip1" class="form-control form-control-sm"
                    required="required" t-att-readonly="'readonly' if only_passwords else None"
                    t-att-autofocus="'autofocus' if login and not only_passwords else None" maxlength="5" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');"/>
            </div>

            <div class="form-group field-country_id">
                <label for="name">Country</label>
                <select required="required" name="country_id" id="country_id" class="form-control form-control-sm signup_country" t-att-readonly="'readonly' if only_passwords else None"
                    t-att-autofocus="'autofocus' if login and not only_passwords else None" >
                        <option value="">Country</option>
                        <t t-foreach="countries or []" t-as="country">
                            <option t-att-value="country.id" t-att-selected="country.id == country_id or (country.name == 'United States' and not country_id)">
                                <t t-esc="country.name"/>
                            </option>
                        </t>
                </select>
            </div>

            <div class="form-group field-password pt-2">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" class="form-control form-control-sm"
                    required="required" t-att-autofocus="'autofocus' if only_passwords else None"/>
            </div>

            <div class="form-group field-confirm_password">
                <label for="confirm_password">Confirm Password</label>
                <input type="password" name="confirm_password" id="confirm_password" class="form-control form-control-sm" required="required"/>
            </div>
        </template>


</odoo>