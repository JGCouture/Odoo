<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="inherit_confirmation_template_add_hyperlinks" inherit_id="website_sale.confirmation">
        <xpath expr="//t[@t-call='website_sale.payment_confirmation_status']" position="after">
            <t t-set="product_links" t-value="order.get_product_links()"/>
            <t t-if="product_links">
                <div>
                    <br/>
                    <b>Additional application form(s) need to fill out</b><br/>
                    <t t-foreach="product_links" t-as="p_link">
                        <a t-att-href="product_links[p_link]" target="_blank"><span t-esc="p_link"/></a>
                        <br/>
                    </t>
                </div>
            </t>
        </xpath>
    </template>

    <template id="inherit_saleorder_portal_template_add_links" inherit_id="sale.sale_order_portal_content">
        <xpath expr="//section[@id='details']" position="before">
            <t t-set="product_links" t-value="sale_order.get_product_links()"/>
            <t t-if="product_links">
                <div>
                    <br/>
                    <b>Additional application form(s) need to fill out</b><br/>
                    <t t-foreach="product_links" t-as="p_link">
                        <a t-att-href="product_links[p_link]" target="_blank"><span t-esc="p_link"/></a>
                        <br/>
                    </t>
                </div>
            </t>
        </xpath>
        <xpath expr="//div[@id='informations']" position="inside">
            <t t-set="user_activity" t-value="sale_order.get_so_user_activity()"/>
            <t t-if="user_activity">
                <div style="margin-top:10px">
                    <strong>Unfinished Activities</strong>
                    <table class="table table-sm o_main_table" style="width:60%">
                        <tbody>
                            <t t-foreach="user_activity" t-as="activity">
                                <tr>
                                    <td>
                                        <span t-esc="activity.get('name')"/>
                                    </td>
                                    <td>
                                        <span t-esc="activity.get('date')"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </xpath>
    </template>

</odoo>