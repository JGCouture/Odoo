<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record id="product_template_form_view_inherit2" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <div>
                    <field name="special_diacount_applicable"/>
                    <label for="special_diacount_applicable"/>
                </div>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="inherit_product_form_term_conditions">
        <field name="name">product.product.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Product Link">
                    <field name="hyper_link_ids">
                        <tree editable="bottom">
                            <field name="name" required="True"/>
                            <field name="url" required="True"/>
                            <field name="product_id" invisible="True"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

</odoo>