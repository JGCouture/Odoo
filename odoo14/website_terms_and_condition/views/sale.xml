<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="inherit_sale_order_form_zbs_web_term">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="currency_id" position="after">
                    <field name="find_ref"/>
                    <field name="referal_code" attrs="{'invisible':[('find_ref', '!=' , 'referral')]}"/>
                    <field name="online_add" attrs="{'invisible':[('find_ref', '!=' , 'online_ad')]}"/>
                    <field name="other_add" attrs="{'invisible':[('online_add', '!=' , 'other')]}"/>
                </field>
                <div name="button_box" position="inside">
                    <button name="action_view_online_form" type="object" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible': [('online_form_count', '=', 0)]}">
                        <field name="online_form_count" widget="statinfo" string="Ordering Form"/>
                    </button>
                </div>
            </field>
        </record>

    </data>
</odoo>