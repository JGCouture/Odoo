<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="sh_res_config_setting_view" model="ir.ui.view">
		<field name="name">res.config.settings</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id" ref="stock.res_config_settings_view_form"/>
		<field name="arch" type="xml">
			<xpath expr="//div[@data-key='stock']" position="inside">
				<h2>Stop Auto add lot/serial configuration</h2>
				<div class="row mt16 o_settings_container">
					<div class="col-12 col-lg-6 o_setting_box">
                       <div class="o_setting_left_pane">
                           <field name="sh_stop_auto_add_lot"/>
                       </div>
                       <div class="o_setting_right_pane">
                           <label for="sh_stop_auto_add_lot"/>
                       </div>
                   </div>
				</div>
			</xpath>
		</field>
	</record>
</odoo>