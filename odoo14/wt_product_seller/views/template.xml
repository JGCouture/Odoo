    <template id="pricelist_list" inherit_id="website_sale.pricelist_list">
        <xpath expr="//div[hasclass('dropdown-menu')]" position="replace">
            <t t-if="request.env.user.is_seller and request.website.sale_get_order() and request.website.sale_get_order().seller_partner_id">
                <div class="dropdown-menu d-none" role="menu">
                </div>
            </t>
            <t t-else="">
                <div class="dropdown-menu" role="menu">
                    <t t-foreach="website_sale_pricelists" t-as="pl">
                        <a role="menuitem" t-att-href="'/shop/change_pricelist/%s' % pl.id" class="dropdown-item">
                            <span class="switcher_pricelist" t-att-data-pl_id="pl.id" t-esc="pl.name" />
                        </a>
                    </t>
                </div>
            </t>
            
        </xpath>
