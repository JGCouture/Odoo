<odoo>
    <!-- Customer -->
    <template id="wt_products" inherit_id="website_sale.products" name="Products">
        <xpath expr="//*[@id='wrap']/div[2]/div[1]" position="before">
            <br/>
            <t t-if="request.env.user.is_seller == True">
                <div class="flex-md-nowrap justify-content-md-center">
                <div class="row">
                        <div class="col-md-6">
                            <t t-set="parent_id" t-if="request.website.sale_get_order() and request.website.sale_get_order().seller_partner_id" t-value="request.website.sale_get_order().seller_partner_id.id"/>
                            <select id="customer" name="customer" class="form-control input-group js-example-basic-single mt-2 mr-2">
                                <option value="">Customer</option>
                                <t t-foreach="request.env['res.partner'].sudo().search([('x_studio_agent', 'in', request.env.user.seller_employee_id.ids)])" t-as="c">
                                    <option t-att-value="c.id" t-att-selected="c.id == parent_id if parent_id else customer">
                                        <t t-esc="c.name"/>
                                    </option>
                                </t>
                            </select>

                            <input id="is_seller_customer" readonly="readonly" type="hidden" value="True"/>
                            <t t-set="_classes" t-valuef="w-100 w-md-auto mt-2"/>
                        </div>

                    <div class="col-md-3">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#create_customer_model">Create Customer</button>
                    </div>
                    <div class="col-md-3">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#update_customer_model">Edit Customer</button>
                    </div>
                    <div class="modal fade bd-example-modal-lg" id="create_customer_model" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
                        <div class="modal-dialog modal-md">
                        <div class="modal-content p-1">
                            <div class="modal-header">
                                <h5 class="modal-title">Create Customer</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span class="fa fa-times"/>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p>
                                    <input class="form-input" type="checkbox" required="" id="use_diff_address"> Use different billing and shipping address.</input>
                                </p>
                                <p><b>Billing Address</b></p>
                                <div class="form-row">
                                    <div t-attf-class="form-group col-lg-12">
                                    <label class="col-form-label" for="name">Lead ID</label>
                                    <input type="text" id="billing_lead_id" name="billing_lead_id" t-attf-class="form-control"/>
                                </div>

                                <div t-attf-class="form-group col-lg-12">
                                    <label class="col-form-label" for="name">Name*</label>
                                    <input type="text" id="x_studio_owner_name_billing" name="x_studio_owner_name_billing" t-attf-class="form-control"/>
                                </div>

                                <div t-attf-class="form-group col-lg-12">
                                    <label class="col-form-label" for="customer_name_billing">DBA (Doing Business As)*</label>
                                    <input type="text" id="customer_name_billing" name="customer_name_billing" t-attf-class="form-control"/>
                                </div>

                                <div class="w-100"/>
                                <div t-attf-class="form-group col-lg-12" id="div_email_billing">
                                    <label class="col-form-label" for="email_billing">Email*</label>
                                    <input type="email" id="email_billing" name="email_billing" t-attf-class="form-control"/>
                                </div>
                                <div t-attf-class="form-group col-lg-6" id="div_phone_billing">
                                    <label class="col-form-label" for="phone_billing">Business Phone*</label>
                                    <input type="text" id="phone_billing" placeholder="Format :4704566785" maxlength="10" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');" name="phone_billing" t-attf-class="form-control"/>
                                </div>
                                <div t-attf-class="form-group col-lg-6" id="div_mobile_billing">
                                    <label class="col-form-label" for="mobile_billing">Cell Phone*</label>
                                    <input type="text" id="mobile_billing" placeholder="Format :4704566785" maxlength="10" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');" name="mobile_billing" t-attf-class="form-control" />
                                </div>
                                <div class="w-100"/>
                                <div t-attf-class="form-group col-lg-12 div_street_billing">
                                    <label class="col-form-label" for="street_billing">Street <span class="d-none d-md-inline"> and Number*</span></label>
                                    <input type="text" id="street_billing" name="street_billing" t-attf-class="form-control"/>
                                </div>
                                <div t-attf-class="form-group col-lg-12 div_street2_billing">
                                    <label class="col-form-label label-optional" for="street2_billing">Street 2</label>
                                    <input type="text" id="street2_billing" name="street2_billing" t-attf-class="form-control"/>
                                </div>
                                <div class="w-100"/>
                                <div t-attf-class="form-group col-md-8">
                                    <label class="col-form-label" for="city_billing">City*</label>
                                    <input type="text" id="city_billing" name="city_billing" t-attf-class="form-control" required=""/>
                                </div>
                                <div t-attf-class="form-group col-md-4 div_zip_billing">
                                    <label class="col-form-label" for="zip_billing">Zip Code*</label>
                                    <input type="text" id="zip_billing" name="zip_billing" maxlength="5" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');" t-attf-class="form-control"/>
                                </div>
                                <div class="w-100"/>
                                <div t-attf-class="form-group col-lg-6 div_country">
                                    <t t-set="countries" t-value="request.env['res.country'].sudo().search([])"/>
                                    <label class="col-form-label" for="country_id_billing">Country*</label>
                                    <select id="country_id_billing" name="country_id_billing" t-attf-class="form-control" required="required">
                                        <option value="">Country...</option>
                                        <t t-foreach="countries" t-as="c">
                                            <option t-att-value="c.id" t-att-selected="(c.name == 'United States')">
                                                    <t t-esc="c.name" />
                                            </option>
                                        </t>
                                    </select>
                                </div>
                                <div t-attf-class="form-group col-lg-6 div_state">
                                    <t t-set="country_states" t-value="request.env['res.country.state'].sudo().search([])"/>
                                    <label class="col-form-label" for="state_id_billing">State / Province*</label>
                                    <select name="state_id_billing" id="state_id_billing" t-attf-class="form-control" data-init="1" >
                                        <option value="">State / Province...</option>
                                        <t t-foreach="country_states" t-as="s">
                                            <option t-att-value="s.id">
                                                <t t-esc="s.name" />
                                            </option>
                                        </t>
                                    </select>
                                </div>
                                </div>

                                <br/>
                                <p class="ship_add d-none"><b>Shipping Address</b></p>
                                <div class="form-row d-none div_ship_add">
                                <div t-attf-class="form-group col-lg-12">
                                    <label class="col-form-label" for="x_studio_owner_name_ship">Name*</label>
                                    <input type="text" id="x_studio_owner_name_ship" name="x_studio_owner_name_ship" t-attf-class="form-control"/>
                                </div>

                                <div t-attf-class="form-group col-lg-12">
                                    <label class="col-form-label" for="customer_name_ship">DBA (Doing Business As)*</label>
                                    <input type="text" id="customer_name_ship" name="customer_name_ship" t-attf-class="form-control"/>
                                </div>

<!--                                <div class="w-100"/>-->
<!--                                <div t-attf-class="form-group col-lg-12">-->
<!--                                    <label class="col-form-label" for="billing_email_ship">Email*</label>-->
<!--                                    <input type="email" id="billing_email_ship" name="billing_email_ship" t-attf-class="form-control"/>-->
<!--                                </div>-->
                                <div t-attf-class="form-group col-lg-6">
                                    <label class="col-form-label" for="phone_billing_ship">Business Phone*</label>
                                    <input type="text" id="phone_billing_ship" placeholder="Format :4704566785" maxlength="10" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');" name="phone_billing_ship" t-attf-class="form-control"/>
                                </div>
                                <div t-attf-class="form-group col-lg-6">
                                    <label class="col-form-label" for="mobile_billing_ship">Cell Phone*</label>
                                    <input type="text" id="mobile_billing_ship" placeholder="Format :4704566785" maxlength="10" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');" name="mobile_billing_ship" t-attf-class="form-control" />
                                </div>
                                <div class="w-100"/>
                                <div t-attf-class="form-group col-lg-12">
                                    <label class="col-form-label" for="street_billing_ship">Street <span class="d-none d-md-inline"> and Number*</span></label>
                                    <input type="text" id="street_billing_ship" name="street_billing_ship" t-attf-class="form-control"/>
                                </div>
                                <div t-attf-class="form-group col-lg-12">
                                    <label class="col-form-label label-optional" for="street2_billing_ship">Street 2</label>
                                    <input type="text" id="street2_billing_ship" name="street2_billing_ship" t-attf-class="form-control"/>
                                </div>
                                <div class="w-100"/>
                                <div t-attf-class="form-group col-md-8 div_city">
                                    <label class="col-form-label" for="city_billing_ship">City*</label>
                                    <input type="text" id="city_billing_ship" name="city_billing_ship" t-attf-class="form-control" required=""/>
                                </div>
                                <div t-attf-class="form-group col-md-4 div_zip">
                                    <label class="col-form-label" for="zip_billing_ship">Zip Code*</label>
                                    <input type="text" id="zip_billing_ship" name="zip_billing_ship" maxlength="5" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');" t-attf-class="form-control"/>
                                </div>
                                <div class="w-100"/>
                                <div t-attf-class="form-group col-lg-6 div_country">
                                    <t t-set="countries" t-value="request.env['res.country'].sudo().search([])"/>
                                    <label class="col-form-label" for="country_billing_ship">Country*</label>
                                    <select id="country_billing_ship" name="country_billing_ship" t-attf-class="form-control" required="required">
                                        <option value="">Country...</option>
                                        <t t-foreach="countries" t-as="c">
                                            <option t-att-value="c.id" t-att-selected="(c.name == 'United States')">
                                                <t t-esc="c.name" />
                                            </option>
                                        </t>
                                    </select>
                                </div>
                                <div t-attf-class="form-group col-lg-6 div_state">
                                    <t t-set="country_states" t-value="request.env['res.country.state'].sudo().search([])"/>
                                    <label class="col-form-label" for="state_billing_ship">State / Province*</label>
                                    <select name="state_billing_ship" id="state_billing_ship" t-attf-class="form-control" data-init="1" >
                                        <option value="">State / Province...</option>
                                        <t t-foreach="country_states" t-as="s">
                                            <option t-att-value="s.id">
                                                <t t-esc="s.name" />
                                            </option>
                                        </t>
                                    </select>
                                </div>
                                </div>

                            </div>
                            <div class="modal-footer">
<!--                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>-->
                                <button type="button" id="web_create_customer" class="web_create_customer btn btn-primary" data-toggle="modal">Create Customer</button>
                            </div>
                        </div>
                    </div>
                    </div>
                    <div class="modal fade bd-example-modal-lg" id="update_customer_model" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
                        <div class="modal-dialog modal-md">
                            <div class="modal-content p-1">
                                <div class="modal-header">
                                    <h5 class="modal-title">Update Customer</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span class="fa fa-times"/>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <p>
                                        <input class="form-input" type="checkbox" required="" id="use_diff_address_update"> Use different billing and shipping address.</input>
                                    </p>
                                    <p><b>Billing Address</b></p>
                                    <t t-set="x_studio_lead_id" t-if="request.website.sale_get_order() and request.website.sale_get_order().seller_partner_id" t-value="request.website.sale_get_order().seller_partner_id.x_studio_lead_id"/>
                                    <t t-set="name" t-if="request.website.sale_get_order() and request.website.sale_get_order().seller_partner_id" t-value="request.website.sale_get_order().seller_partner_id.name"/>
                                    <t t-set="x_studio_owner_name" t-if="request.website.sale_get_order() and request.website.sale_get_order().seller_partner_id" t-value="request.website.sale_get_order().seller_partner_id.x_studio_owner_name"/>
                                    <t t-set="email" t-if="request.website.sale_get_order() and request.website.sale_get_order().seller_partner_id" t-value="request.website.sale_get_order().seller_partner_id.email"/>
                                    <t t-set="phone" t-if="request.website.sale_get_order() and request.website.sale_get_order().seller_partner_id" t-value="request.website.sale_get_order().seller_partner_id.phone"/>
                                    <t t-set="mobile" t-if="request.website.sale_get_order() and request.website.sale_get_order().seller_partner_id" t-value="request.website.sale_get_order().seller_partner_id.mobile"/>
                                    <t t-set="street" t-if="request.website.sale_get_order() and request.website.sale_get_order().seller_partner_id" t-value="request.website.sale_get_order().seller_partner_id.street"/>
                                    <t t-set="street2" t-if="request.website.sale_get_order() and request.website.sale_get_order().seller_partner_id" t-value="request.website.sale_get_order().seller_partner_id.street2"/>
                                    <t t-set="city" t-if="request.website.sale_get_order() and request.website.sale_get_order().seller_partner_id" t-value="request.website.sale_get_order().seller_partner_id.city"/>
                                    <t t-set="zip_code" t-if="request.website.sale_get_order() and request.website.sale_get_order().seller_partner_id" t-value="request.website.sale_get_order().seller_partner_id.zip"/>
                                    <t t-set="country_id" t-if="request.website.sale_get_order() and request.website.sale_get_order().seller_partner_id" t-value="request.website.sale_get_order().seller_partner_id.country_id"/>
                                    <t t-set="state_id" t-if="request.website.sale_get_order() and request.website.sale_get_order().seller_partner_id" t-value="request.website.sale_get_order().seller_partner_id.state_id"/>

                                    <div class="form-row">
                                        <div t-attf-class="form-group col-lg-12">
                                        <label class="col-form-label" for="name">Lead ID</label>
                                        <input type="text" id="billing_lead_id_update" t-att-readonly="'readonly' if x_studio_lead_id else None" name="billing_lead_id_update" t-att-value="x_studio_lead_id" t-attf-class="form-control"/>
                                    </div>

                                    <div t-attf-class="form-group col-lg-12">
                                        <label class="col-form-label" for="name">Name*</label>
                                        <input type="text" id="x_studio_owner_name_billing_update"  name="x_studio_owner_name_billing_update" t-attf-class="form-control" t-att-value="x_studio_owner_name"/>
                                    </div>

                                    <div t-attf-class="form-group col-lg-12">
                                        <label class="col-form-label" for="customer_name_billing_update">DBA (Doing Business As)*</label>
                                        <input type="text" id="customer_name_billing_update" name="customer_name_billing_update" t-attf-class="form-control" t-att-value="x_studio_owner_name" t-att-readonly="'readonly' if x_studio_owner_name else None"/>
                                    </div>

                                    <div class="w-100"/>
                                    <div t-attf-class="form-group col-lg-12" id="div_email_billing">
                                        <label class="col-form-label" for="email_billing_update">Email*</label>
                                        <input type="email" id="email_billing_update" name="email_billing_update" t-attf-class="form-control"  t-att-value="email" />
                                    </div>
                                    <div t-attf-class="form-group col-lg-6" id="div_phone_billing">
                                        <label class="col-form-label" for="phone_billing_update">Business Phone*</label>
                                        <input type="text" id="phone_billing_update" placeholder="Format :4704566785" t-att-value="phone" maxlength="10" t-att-readonly="'readonly' if phone else None" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');" name="phone_billing" t-attf-class="form-control"/>
                                    </div>
                                    <div t-attf-class="form-group col-lg-6" id="div_mobile_billing">
                                        <label class="col-form-label" for="mobile_billing_update">Cell Phone*</label>
                                        <input type="text" id="mobile_billing_update" placeholder="Format :4704566785" t-att-value="mobile" maxlength="10" t-att-readonly="'readonly' if mobile else None" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');" name="mobile_billing" t-attf-class="form-control" />
                                    </div>
                                    <div class="w-100"/>
                                    <div t-attf-class="form-group col-lg-12 div_street_billing">
                                        <label class="col-form-label" for="street_billing_update">Street <span class="d-none d-md-inline"> and Number*</span></label>
                                        <input type="text" id="street_billing_update" name="street_billing_update" t-att-value="street" t-attf-class="form-control" t-att-readonly="'readonly' if street else None"/>
                                    </div>
                                    <div t-attf-class="form-group col-lg-12 div_street2_billing">
                                        <label class="col-form-label label-optional" for="street2_billing_update">Street 2</label>
                                        <input type="text" id="street2_billing_update" name="street2_billing_update" t-att-value="street2" t-attf-class="form-control" t-att-readonly="'readonly' if street2 else None"/>
                                    </div>
                                    <div class="w-100"/>
                                    <div t-attf-class="form-group col-md-8">
                                        <label class="col-form-label" for="city_billing_update">City*</label>
                                        <input type="text" id="city_billing_update" name="city_billing_update" t-att-value="city" t-attf-class="form-control" required="" t-att-readonly="'readonly' if city else None"/>
                                    </div>
                                    <div t-attf-class="form-group col-md-4 div_zip_billing">
                                        <label class="col-form-label" for="zip_billing_update">Zip Code*</label>
                                        <input type="text" id="zip_billing_update" name="zip_billing_update" maxlength="5" t-att-value="zip_code" t-att-readonly="'readonly' if zip else None" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');" class="form-control"/>
                                    </div>
                                    <div class="w-100"/>
                                    <div t-attf-class="form-group col-lg-6 div_country">
                                        <t t-set="countries" t-value="request.env['res.country'].sudo().search([])"/>
                                        <label class="col-form-label" for="country_id_billing_update">Country*</label>
                                        <select id="country_id_billing_update" name="country_id_billing_update" t-attf-class="form-control" t-att-disabled="'disabled' if country_id else None" required="required" >
                                            <option value="">Country...</option>
                                            <t t-foreach="countries" t-as="c">
                                                <option t-att-value="c.id" t-att-selected="'selected' if c.id == request.website.sale_get_order().seller_partner_id.country_id.id  else None">
                                                    <t t-esc="c.name" />
                                                </option>
                                            </t>
                                        </select>
                                    </div>
                                    <div t-attf-class="form-group col-lg-6 div_state">
                                        <t t-set="country_states" t-value="request.env['res.country.state'].sudo().search([])"/>
                                        <label class="col-form-label" for="state_id_billing_update">State / Province*</label>
                                        <select name="state_id_billing_update" id="state_id_billing_update" t-attf-class="form-control" data-init="1" t-att-disabled="'disabled' if state_id else None">
                                            <option value="">State / Province...</option>
                                            <t t-foreach="country_states" t-as="s">
                                                <option t-att-value="s.id" t-att-selected="'selected' if s.id == request.website.sale_get_order().seller_partner_id.state_id.id  else None">
                                                    <t t-esc="s.name" />
                                                </option>
                                            </t>
                                        </select>
                                    </div>
                                    <t t-set="shipping_address" t-if="request.website.sale_get_order() and len(request.website.sale_get_order().seller_partner_id.child_ids)>0" t-value="request.website.sale_get_order().seller_partner_id.child_ids[0]"/>
                                    <t t-set="shipping_x_studio_owner_name" t-if="shipping_address" t-value="shipping_address.x_studio_owner_name"/>
                                    <t t-set="shipping_email" t-if="shipping_address" t-value="shipping_address.email"/>
                                    <t t-set="shipping_phone" t-if="shipping_address" t-value="shipping_address.phone"/>
                                    <t t-set="shipping_mobile" t-if="shipping_address" t-value="shipping_address.mobile"/>
                                    <t t-set="shipping_street" t-if="shipping_address" t-value="shipping_address.street"/>
                                    <t t-set="shipping_street2" t-if="shipping_address" t-value="shipping_address.street2"/>
                                    <t t-set="shipping_city" t-if="shipping_address" t-value="shipping_address.city"/>
                                    <t t-set="shipping_zip" t-if="shipping_address" t-value="shipping_address.zip"/>
                                    <t t-set="shipping_country_id" t-if="shipping_address" t-value="shipping_address.country_id"/>
                                    <t t-set="shipping_state_id" t-if="shipping_address" t-value="shipping_address.state_id"/>
                                    </div>

                                    <br/>
                                    <p class="ship_add_update d-none"><b>Shipping Address</b></p>


                                    <div class="form-row d-none div_ship_add_update">

                                    <div t-attf-class="form-group col-lg-12">
                                        <label class="col-form-label" for="x_studio_owner_name_ship_update">Name*</label>
                                        <input type="text" id="x_studio_owner_name_ship_update" name="x_studio_owner_name_ship_update" t-attf-class="form-control" t-att-value="shipping_x_studio_owner_name" />
                                    </div>

                                    <div t-attf-class="form-group col-lg-12">
                                        <label class="col-form-label" for="customer_name_ship_update">DBA (Doing Business As)*</label>
                                        <input type="text" id="customer_name_ship_update" name="customer_name_ship_update" t-attf-class="form-control" t-att-value="shipping_x_studio_owner_name" t-att-readonly="'readonly' if shipping_x_studio_owner_name else None"/>
