<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- This template is the one at the "Review order" step (the first one) on the checkout workflow. -->
    <template id="product_order_history" name="Product Order History">
        <div class="modal fade quickview-modal" role="dialog" id="product_quick_views_popup">
        <div class="modal-dialog mt32">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class='pro_title'>
                        <t t-esc="sel_product.name" />
                    </h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span Class="mdl_close">X</span>
                    </button>
                </div>
                    <div class="modal-body">
                        <div t-if="not order_lines" class="product_order_history alert alert-info">
                          No any order created yet for selected product!
                        </div>
                        <table class="mb16 table table-striped table-sm product_order_history" id="product_order_history" t-if="order_lines">
                            <thead>
                                <tr>
                                    <th class="text-center">Order</th>
                                    <th class="text-center">Date</th>
                                    <th class="text-center">Qty</th>
                                    <th class="text-center">Price</th>
                                    <th class="text-center">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="order_lines" t-as="line">
                                    <tr>
                                        <td align="center" class='text-center'>
                                            <span t-field="line.order_id.name"/>
                                        </td>
                                        <td align="center" class='text-center'>
                                            <span t-field="line.order_id.date_order"/>
                                        </td>
                                        <td align="center" class='text-center'>
                                            <span t-field="line.product_uom_qty"/>
                                        </td>
                                        <td align="center" class='text-center'>
                                            <span t-field="line.price_unit"/>
                                        </td>
                                        <td align="center" class='text-center'>
                                            <span t-field="line.price_subtotal"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
            </div>
        </div>
    </div>

    </template>
</odoo>