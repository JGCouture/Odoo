<odoo>
  <data>
      <record id="view_sale_order_advance_payment_inherited" model="ir.ui.view">
          <field name="name">sale.order.advance.payment.inherit</field>
          <field name="model">sale.order</field>
          <field name="inherit_id" ref="sale.view_order_form"/>
          <field name="arch" type="xml">
              <xpath expr="//field[@name='payment_term_id']" position="after">
                  <field name="advance_amount" invisible="1"/>
                  <field name="is_advance_amount" invisible="1"/>
                  <field name="advance_amount_pay" invisible="1"/>
              </xpath>
          </field>
      </record>

      <record id="sale_order_down_payment_view_form" model="ir.ui.view">
         <field name="name">sale.order.form.inherit.down.payment</field>
         <field name="model">sale.order</field>
         <field name="inherit_id" ref="sale.view_order_form" />
         <field name="priority">10</field>
         <field name="arch" type="xml">
            <xpath expr="//group[@name='note_group']" position="after">
                <div class="oe_right" attrs="{'invisible': [('down_payment_total', '=', 0)]}">
                    <group name="note_advance_payment_group" col="6" class="mt-2 mt-md-0">
                        <group colspan="4">
                        </group>
                        <group class="oe_subtotal_footer oe_right" colspan="2" name="advance_sale_total">
                            <field name="amount_total" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="down_payment_total" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="paid_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                <label for="amount_due"/>
                            </div>
                            <field name="amount_due" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                        <div class="oe_clear"/>
                    </group>
                </div>
            </xpath>
         </field>
    </record>

  </data>
</odoo>