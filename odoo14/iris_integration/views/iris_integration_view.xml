<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="priority_color_project_inherit_form" model="ir.ui.view">
        <field name="name">project.task.view.inherit.priority.color</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="color"  />
                <field name="color_priority" />
            </xpath>
        </field>
    </record>


    <record id="iris_integration_history_form_view" model="ir.ui.view">
        <field name="name">iris.integration.history.form</field>
        <field name="model">iris.integration.history</field>
        <field name="arch" type="xml">
            <form string="History" create="false" edit="false" delete="false">
                <sheet>
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="create_date"/>
                        </group>
                        <group>
                            <field name="order_id"/>
                            <field name="response"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="iris_integration_history_tree_view" model="ir.ui.view">
        <field name="name">iris.integration.history.tree</field>
        <field name="model">iris.integration.history</field>
        <field name="arch" type="xml">
            <tree string="History" create="false" edit="false" delete="false">
                <field name="user_id"/>
                <field name="create_date"/>
                <field name="order_id"/>
                <field name="partner_id"/>
                <field name="response"/>
            </tree>
        </field>
    </record>

    <record id="iris_integration_history_so_action_view" model="ir.actions.act_window">
        <field name="name">Iris Request History</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">iris.integration.history</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('order_id', '!=', False)]</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            <!-- Add Text Here -->
          </p><p>
            <!-- More details about what a user can do with this object will be OK -->
          </p>
        </field>
    </record>

    <record id="iris_integration_history_partner_action_view" model="ir.actions.act_window">
        <field name="name">Iris Request History</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">iris.integration.history</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('partner_id', '!=', False)]</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            <!-- Add Text Here -->
          </p><p>
            <!-- More details about what a user can do with this object will be OK -->
          </p>
        </field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="iris_integration_history_so_menu_view"
              name="Iris Request History(SO)"
              parent="sale.menu_sale_config"
              action="iris_integration_history_so_action_view" sequence="20"/>
    <menuitem id="iris_integration_history_partner_menu_view"
              name="Iris Request History(Customer)"
              parent="sale.menu_sale_config"
              action="iris_integration_history_partner_action_view" sequence="20"/>
</odoo>