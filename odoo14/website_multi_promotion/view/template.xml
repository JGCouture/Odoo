<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="hide_add_to_card_for_multi_variant" inherit_id="website_sale.products_add_to_cart">
        <xpath expr="//t[@t-if='product_variant_id']" position="replace">
             <t t-if="product_variant_id">
                <t t-if="product.sudo().product_variant_ids and len(product.sudo().product_variant_ids) > 1">
                </t>
                 <t t-else="">
                    <a href="#" role="button" class="btn btn-secondary a-submit" aria-label="Shopping cart" title="Shopping cart">
                        <span class="fa fa-shopping-cart"/>
                    </a>
                 </t>
            </t>
        </xpath>
    </template>

    <template id="inherit_coupon_code_view_zbs" inherit_id="website_sale.reduction_code">
        <xpath expr="//a[hasclass('show_coupon')]" position="replace">
            <t t-if="not website_sale_order.partner_id.name in ['Public User','Public user']">
                <a href="#" class="show_coupon">I have a promo code</a>
            </t>
        </xpath>
    </template>

</odoo>