<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
		<record model="ir.module.category" id="module_category_message_editor">
            <field name="name">Message Editor</field>
            <field name="description">Helps you to handle your Message Editor Security</field>
            <field name="sequence">7</field>
        </record>

        <record id="group_message_editor_for_own" model="res.groups">
	        <field name="name">Own Messages</field>
	        <field name="category_id" ref="module_category_message_editor"/>
	        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
	        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
	    </record>

		<record id="group_message_editor_for_all" model="res.groups">
	        <field name="name">All Messages</field>
	        <field name="category_id" ref="module_category_message_editor"/>
	        <field name="users" eval="[(4, ref('base.user_root'))]"/>
	        <field name="implied_ids" eval="[(4, ref('group_message_editor_for_own'))]"/>
	    </record>
	</data>
	
</odoo>
