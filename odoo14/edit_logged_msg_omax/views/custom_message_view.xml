<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Custom Message Form View -->
    <record id="custom_message_form" model="ir.ui.view">
        <field name="name">custom.message.form</field>
        <field name="model">mail.message</field>
        <field name="arch" type="xml">
            <form create="false" string="Mail Message Custom">
                <sheet>
                    <group>
                        <field name="subject" readonly="1"/>
                        <field name="body"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!--override default messages menu action-->
    <record id="mail.action_view_mail_message" model="ir.actions.act_window">
        <field name="name">Messages</field>
        <field name="res_model">mail.message</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="mail.view_message_search"/>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('mail.view_message_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('mail.mail_message_view_form')})]"/>
    </record>
    
</odoo>





    
