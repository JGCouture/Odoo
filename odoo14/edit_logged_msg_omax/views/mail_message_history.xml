<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mail_message_history_form" model="ir.ui.view">
        <field name="name">mail.message.history.form</field>
        <field name="model">mail.message</field>
        <field name="inherit_id" ref="mail.mail_message_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='page_tracking']" position="after">
                <page string="Edit History" name="message_history">
                    <field name="mail_message_history_line" mode="tree">
                        <tree create="0" editable="false">
                            <field name="date_time"/>
                            <field name="body" options="{'style-inline': true}"/>
                            <field name="message_edit" widget="selection"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
