<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <!--for put custome Edit button in Message-->
    <t t-name="mail.CustomMessage" t-inherit="mail.Message"  t-inherit-mode="extension" owl="1">
        <xpath expr="//div/t/div[2]/div[hasclass('o_Message_content')]" position="after">
            <t t-if="hasAuthorGroup">
                <button class="o_Activity_toolButton o_Activity_editButton edit_cus_btn btn btn-link" t-att-data-message-chatter-id="message.localId" t-att-style="hasModified?'color:green':''" t-on-click="_onClickEdit" title="Edit">
                    <i class="fa fa-pencil"/>
                </button>
            </t>
            <t t-if="hasDeletor">
                <button class="o_Activity_toolButton o_Activity_editButton edit_cus_btn btn btn-link" t-att-data-message-chatter-id="message.localId" t-on-click="_onClickDelete" title="Delete">
                        <i class="fa fa-trash-o" style="color:red"></i>
                </button>
            </t>
        </xpath>
    </t>

</templates>
