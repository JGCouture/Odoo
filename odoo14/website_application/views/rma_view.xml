<odoo>
	<data>
		<record id="rma_form_form_id" model="ir.ui.view">
	        <field name="name">rma.form.form</field>
	        <field name="model">rma.form</field>
	        <field name="arch" type="xml">

		        <form string="RMA Form">
					<header>

						<button class="oe_highlight" name="action_refuse"  id="button_refuse" confirm="An email will be sent, you sure you want to refuse ?"
								string="Refuse" type="object" icon="" attrs="{'invisible':['|',('status','=','approved'),('status','=','refused')]}" />

						<button class="oe_highlight" name="action_approve" id="button_approve"  confirm="An email will be sent , you sure you want to approve ?"
								string="Approve" type="object" icon="" attrs="{'invisible':['|',('status','=','approved'),('status','=','refused')]}" />
						<field name="status" widget="statusbar"   statusbar_visible="new,approved,refused" statusbar_colors='{"approved":"blue"}'/>
					</header>
					<sheet>
						<group>
							<group>
								<field name="service_type"/>
								<field name="dba"/>
								<field name="contact_name"/>
								<field name="email"/>
								<field name="contact_phone"/>
								<field name="restaurant_address"/>
								<field name="restaurant_city"/>
								<field name="restaurant_zipcode"/>
								<field name="sale_order"/>
							</group>
							<group>
								<field name="country_id"/>
								<field name="state_id"/>
								<field name="model_number"/>
								<field name="serial_number"/>
								<field name="date_of_purchase"/>

								<field name="picture_of_faulty_device" widget='image'/>
								<field name="signature" widget='image' />

							</group>
						</group>
						<notebook>
							<page name="description_page" string="Fault Description">
								<field name="detailed_fault_description" type="html"/>
								<div class="d-none oe_clear"/>
							</page>
							<page name="reason" string="Reject Reason">
								<field name="reason" type="html"/>
								<div class="d-none oe_clear"/>
							</page>
						</notebook>
                	</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
						<field name="message_ids" widget="mail_thread"/>
					</div>
		        </form>
	    	</field>
	    </record>
		<record id="rma_form_tree_id" model="ir.ui.view">
			<field name="name">rma.form.tree</field>
			<field name="model">rma.form</field>
			<field name="arch" type="xml">

				<tree string="RMA Form">
					<field name="dba"/>
					<field name="contact_name"/>
					<field name="lead_id"/>
					<field name="status"/>
				</tree>

			</field>
    	</record>

		<record id="action_rma_form" model="ir.actions.act_window">
	        <field name="name">RMA Form</field>
	        <field name="res_model">rma.form</field>
	        <!-- <field name="view_type">form</field> -->
	        <field name="view_mode">tree,form</field>
	    </record>

		<menuitem id="menu_rma_form" name="RMA Application Form" parent="rma.menu_rma_id_parent" action="action_rma_form" sequence="12"/>

		<!-- #################     menu for portal user     ################################ -->
		<!-- <menuitem id="menu_rma_portal_id_parent" parent="portal.portal_menu" name="RMA"/>
		<menuitem action="action_rma_id" id="menu_rma_portal_id" parent="menu_rma_portal_id_parent" name="RMA"/> -->
	</data>
</odoo>
