<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="inherit_res_partner_form_portal_password" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Portal Access">
                        <group>
                            <field name="user_created_manually" invisible="1"/>
                            <field name="is_portal_user" invisible="True"/>
                            <field name="login_password" password="True"/>
                        </group>
                        <button name="create_portal_user" string="Create Portal User" attrs="{'invisible':[('is_portal_user', '=', True)]}" type="object"/>
                        <button name="send_credentials" attrs="{'invisible':['|',('is_portal_user', '!=', True), ('user_created_manually', '!=', True)]}" string="Send by Email" class="btn-primary" type="object"/>
                    </page>
                </notebook>
            </field>
        </record>

    </data>
</odoo>