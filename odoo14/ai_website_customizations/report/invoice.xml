<odoo>
  <data>

        <template inherit_id="account.report_invoice_document" id="inherit_invoice_report_recurring">
            <xpath expr="//div[@id='total']//tr[hasclass('o_subtotal')]" position="replace">
                <tr class="border-black o_subtotal" style="">
                    <td><strong>Subtotal</strong></td>
                    <td class="text-right">
                        <span t-esc="o.amount_untaxed - o.get_recurring_total()" class="monetary_field" style="white-space: nowrap;" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}" />
                    </td>
                </tr>
                <t t-if="o.move_type == 'out_invoice'">
                    <tr class="" style="">
                        <td><strong>Recurring Total</strong></td>
                        <td class="text-right">
                            <span t-esc="o.get_recurring_total()" class="monetary_field" style="white-space: nowrap;" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}" />
                        </td>
                    </tr>
                </t>
          </xpath>
      </template>

  </data>
</odoo>